{
	"name": "@creem_io/better-auth",
	"version": "0.0.12",
	"description": "Creem official Better-Auth plugin",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"sideEffects": false,
	"scripts": {
		"build": "npm run lint:fix && npm run build:cjs && npm run build:esm && npm run build:package-json",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:package-json": "node ./buildPackageJson.mjs",
		"typecheck": "tsc --noEmit",
		"biome:check": "npx -y @biomejs/biome check",
		"biome:lint": "npx -y @biomejs/biome lint",
		"biome": "npm run biome:check && npm run biome:lint",
		"biome:fix": "npm run biome:check -- --fix && npm run biome:lint -- --fix",
		"lint": "npm run typecheck && npm run biome",
		"lint:fix": "npm run typecheck && npm run biome:fix",
		"prepublishOnly": "npm run build",
		"test": "echo \"No tests specified\" && exit 0"
	},
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./client": {
			"types": "./dist/esm/client.d.ts",
			"import": "./dist/esm/client.js",
			"require": "./dist/cjs/client.js"
		},
		"./create-creem-auth-client": {
			"types": "./dist/esm/create-creem-auth-client.d.ts",
			"import": "./dist/esm/create-creem-auth-client.js",
			"require": "./dist/cjs/create-creem-auth-client.js"
		},
		"./server": {
			"types": "./dist/esm/creem-server.d.ts",
			"import": "./dist/esm/creem-server.js",
			"require": "./dist/cjs/creem-server.js"
		}
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"dist/**/*.d.ts.map",
		"dist/**/package.json",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/armitage-labs/creem-betterauth.git"
	},
	"keywords": [
		"creem",
		"betterauth",
		"better-auth",
		"payment",
		"subscription",
		"stripe-alternative"
	],
	"author": "Creem",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/armitage-labs/creem-betterauth/issues"
	},
	"homepage": "https://github.com/armitage-labs/creem-betterauth#readme",
	"devDependencies": {
		"@biomejs/biome": "2.3.14",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^20",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"better-auth": "^1.4.18",
		"better-sqlite3": "^12.6.2",
		"creem": "^1.3.6",
		"eslint": "^9",
		"eslint-config-next": "16.1.6",
		"next": "^16.1.6",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"tailwind": "^4.0.0",
		"typescript": "^5",
		"zod": "^4.3.6"
	},
	"peerDependencies": {
		"better-auth": "^1.4.18",
		"creem": "^0.4.0",
		"zod": "^3.23.8 || ^4"
	}
}
